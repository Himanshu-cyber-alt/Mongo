<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Progress Tracker</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 0; padding: 20px; }
        h1 { color: #333; }
        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 10px; text-align: left; border-bottom: 1px solid #ddd; }
        th { background-color: #f2f2f2; }
        tr:hover { background-color: #f5f5f5; }
        .btn { display: inline-block; padding: 10px 15px; background-color: #4CAF50; color: white; 
               text-decoration: none; border-radius: 4px; margin: 20px 0; }
    </style>
</head>
<body>
    <h1>Student Progress Tracker</h1>
    <a href="/add" class="btn">Add New Student</a>
    
    <% if(students.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Course</th>
                    <th>Grade</th>
                    <th>Date Added</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.name %></td>
                        <td><%= student.course %></td>
                        <td><%= student.grade %></td>
                        <td><%= student.createdAt.toLocaleDateString() %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No students found</p>
    <% } %>
</body>
</html>

